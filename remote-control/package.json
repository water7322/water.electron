{
    "name": "remote-control",
    "version": "1.0.0",
    "description": "",
    "main": "app/main/index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start:main": "electron .",
        "start:render": "cd app/renderer/src/main && npm start",
        "start": "concurrently \"npm run start:render\" \"wait-on http://localhost:3000 && npm run start:main\"",
        "build": "cd app/renderer/src/main && npm run build",
        "pack:mac": "npm run build && electron-builder --mac",
        "pack:win": "npm run build && electron-builder --win --ia32"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@electron/remote": "^2.0.9",
        "about-window": "^1.15.2",
        "electron-is-dev": "^2.0.0",
        "electron-squirrel-startup": "^1.0.0",
        "robotjs": "^0.6.0",
        "vkey": "^1.0.1",
        "ws": "^8.13.0"
    },
    "devDependencies": {
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "electron": "^23.1.4",
        "electron-builder": "^23.6.0",
        "electron-builder-squirrel-windows": "^24.0.0",
        "electron-rebuild": "^3.2.9",
        "wait-on": "^7.0.1"
    },
    "build": {
        "appId": "com.water.mercurius",
        "productName": "Mercurius",
        "files": "app",
        "asar": false,
        "extraFiles": [
            "app/renderer/**/src"
        ],
        "directories": {
            "buildResources": "resource",
            "output": "release"
        },
        "copyright": "Copyright Â© 2023 water768",
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "resources/icon.icns"
        },
        "dmg": {
            "background": "resources/background.png",
            "window": {
                "width": 540,
                "height": 380
            },
            "contents": [
                {
                    "x": 410,
                    "y": 180,
                    "type": "link",
                    "path": "/Application"
                },
                {
                    "x": 130,
                    "y": 180,
                    "type": "file"
                }
            ],
            "iconSize": 128
        },
        "win": {
            "icon": "resources/icon.ico",
            "target": [
                "squirrel",
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "language": "2052",
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        },
        "squirrelWindows": {
            "iconUrl": "https://raw.githubusercontent.com/dengyaolong/geektime-electron/master/img/icon.ico"
        }
    }
}
